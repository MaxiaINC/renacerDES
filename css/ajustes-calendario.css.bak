/* width */
body ::-webkit-scrollbar {
	width: 10px;
}
/* Track */
body ::-webkit-scrollbar-track {
	box-shadow: inset 0 0 2px grey;
	border-radius: 10px;
}
/* Handle */
body ::-webkit-scrollbar-thumb {
	background: #555555; 
	border-radius: 10px;
}
::-webkit-scrollbar { 
   display: block;
   height: 12px;
}
#desdef, #hastaf{ width: 95%; float: left;}
.filtro-exist{
	background: #fbd705 !important;
    color: #000000 !important;
}
input[type=checkbox]{
	vertical-align: middle; 
}
.fc-state-active{ background: #1e3d7a; }
.fc-scroller.fc-day-grid-container {
   min-height: 920px !important;
}
.fc-row.fc-week.fc-widget-content.fc-rigid {
    min-height: 150px;
}
.fisica{
	background: #FF0000;
}
.auditiva{
	background: #00FF00; 
}
.visual{
	background: #0000FF; 
}
.mental{
	background: #086A87; 
}
.visceral{
	background: #808080; 
}
.intelectual{
	background: #800080; 
}
.select2-container--default .select2-results__option--highlighted[aria-selected]{
	background-color: #36C95F;
}
.fc-more-popover .fc-event-container {
    padding: 0px;
	overflow-y: scroll;
    height: 200px;
}
.fc-event-container::-webkit-scrollbar {
    -webkit-appearance: none;
}

.fc-event-container::-webkit-scrollbar:vertical {
    width:6px;
}

.fc-event-container::-webkit-scrollbar-button:increment,.contenedor::-webkit-scrollbar-button {
    display: none;
} 

.fc-event-container::-webkit-scrollbar:horizontal {
    height: 6px;
}

.fc-event-container::-webkit-scrollbar-thumb {
    background-color: #ff0000;
    border-radius: 20px;
    border: 2px solid #f1f2f3;
}

.fc-event-container::-webkit-scrollbar-track {
    border-radius: 10px;  
}


